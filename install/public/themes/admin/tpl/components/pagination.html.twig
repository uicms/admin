{% if paginator.total_pages > 1 %}
<div class="cpnt cpnt_pagination">
    <ul class="pagination pagination-sm">
        {% if paginator.prev %}
            <li class="page-item"><a class="page-link" href="{{ path('admin_page_action', {slug: page.slug, action: current_tab.route.action, offset: paginator.prev_offset}) }}">Previous</a></li>
       {% endif %}
        {% for nav in paginator.nav %}
        <li class="page-item{% if paginator.current_page == nav.page %} active{% endif %}">
                <a class="page-link" href="{{ path('admin_page_action', {slug: page.slug, action: current_tab.route.action, offset: nav.offset}) }}">{{ nav.page }}</a>
        </li>
        {% endfor %}
        {% if paginator.next %}<li class="page-item"><a class="page-link" href="{{ path('admin_page_action', {slug: page.slug, action: current_tab.route.action, offset: paginator.next_offset}) }}">Next</a></li>{% endif %}
    </ul>
</div>
{% endif %}